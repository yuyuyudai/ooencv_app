<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">



    <!-- 画面全体の親ビュー -->
    <LinearLayout
        android:id="@+id/parent_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:id="@+id/size_threshold_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- タイトル部分 -->
            <TextView
                android:id="@+id/size_threshold_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="サイズ設定"
                android:textSize="40sp"
                android:clickable="true"
                android:focusable="true" />

            <!-- サイズの視覚的ガイド -->
            <LinearLayout
                android:id="@+id/size_threshold_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/strawberry_small_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/strawberry_small"
                    android:contentDescription="Sサイズ" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textSize="16sp"
                    android:paddingStart="8dp" />

                <ImageView
                    android:id="@+id/strawberry_medium_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/strawberry_medium"
                    android:contentDescription="Mサイズ"
                    android:paddingStart="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:textSize="16sp"
                    android:paddingStart="8dp" />

                <ImageView
                    android:id="@+id/strawberry_large_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/strawberry_large"
                    android:contentDescription="Lサイズ"
                    android:paddingStart="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:textSize="16sp"
                    android:paddingStart="8dp" />




            </LinearLayout>

            <!-- 閾値のスライダー設定（S-M） -->
            <TextView
                android:id="@+id/sizethreshold_s_m_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S-Mサイズの閾値"
                android:textSize="18sp"
                android:paddingTop="16dp" />

            <SeekBar
                android:id="@+id/sizethreshold_s_m_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:thumb="@drawable/custom_thumb" />

            <TextView
                android:id="@+id/sizethreshold_s_m_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="現在の値: 10"
                android:paddingTop="8dp" />

            <!-- 閾値のスライダー設定（M-L） -->
            <TextView
                android:id="@+id/sizethreshold_m_l_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M-Lサイズの閾値"
                android:textSize="18sp"
                android:paddingTop="16dp" />

            <SeekBar
                android:id="@+id/sizethreshold_m_l_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:thumb="@drawable/custom_thumb" />

            <TextView
                android:id="@+id/sizethreshold_m_l_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="現在の値: 20"
                android:paddingTop="8dp" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/predict_weight_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- タップ可能なラベル -->
            <TextView
                android:id="@+id/predict_weight_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重さ設定"
                android:textSize="40sp"
                android:clickable="true"
                android:focusable="true" />

            <!-- 初期状態では非表示の詳細部分 -->
            <LinearLayout
                android:id="@+id/predict_weight_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/predict_weight_input_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重さの変数"
                    android:clickable="true"
                    android:focusable="true"/>

                <EditText
                    android:id="@+id/predict_weight_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/lower_bound_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- タップ可能なラベル -->
            <TextView
                android:id="@+id/lower_bound_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="熟度（赤）"
                android:textSize="40sp"
                android:clickable="true"
                android:focusable="true" />

            <!-- 初期状態では非表示の詳細部分 -->
            <LinearLayout
                android:id="@+id/lower_bound_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/lower_bound_hue_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hue:" />
                <EditText
                    android:id="@+id/lower_bound_input_hue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/lower_bound_saturation_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saturation:" />
                <EditText
                    android:id="@+id/lower_bound_input_saturation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/lower_bound_value_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value:" />
                <EditText
                    android:id="@+id/lower_bound_input_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </LinearLayout>

        </LinearLayout>

        <!-- 同じようにpredict_sizeとslopeのセクションを追加 -->






        <LinearLayout
            android:id="@+id/slope_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- タップ可能なラベル -->
            <TextView
                android:id="@+id/slope_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="予測時間"
                android:textSize="40sp"
                android:clickable="true"
                android:focusable="true" />

            <!-- 初期状態では非表示の詳細部分 -->
            <LinearLayout
                android:id="@+id/slope_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/slope_input_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slope:" />

                <EditText
                    android:id="@+id/slope_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </LinearLayout>

        </LinearLayout>

        <!-- 内部の親ビュー -->

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            app:layout_constraintTop_toBottomOf="@+id/slope_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/inner_parent_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="677dp">

        <!-- 戻るボタン -->
        <Button
            android:id="@+id/back_button"
            style="@android:style/Widget.Material.Light.Button.Toggle"
            android:layout_width="142dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:text="戻る" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>